[MASTER]

ignore=tests

[MESSAGE CONTROL]

disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring

[FORMAT]
	line-too-long,
	max-line-length=80


[REFACTORING]
	too-many-nested-blocks

[DESIGN]
	too-many-statements,
	too-many-locals,
	max-nested-blocks=2,
	max-statements=15